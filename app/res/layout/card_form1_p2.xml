<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/form1_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/delete_btnp2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.98"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.01999998"
                    app:tint="@color/red1" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_name"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ስም">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_name_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_middle_name"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ስም ኣቦ">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_middle_name_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_last_name"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ስም ኣቦሓጎ">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_last_name_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_relation_with_head_edit_text"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ዝምድና ምስ ሓላፊ ስድራ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_relation_with_head"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                                android:id="@+id/gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                app:tbgCheckedButton="@+id/choice_female">

                                <com.nex3z.togglebuttongroup.button.CircularToggle
                                    android:id="@+id/choice_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ኣን" />

                                <com.nex3z.togglebuttongroup.button.CircularToggle
                                    android:id="@+id/choice_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ተባ" />
                            </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_nationality"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:hint="ዜግነት">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_nationality_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_nebarnet_number"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ቁጽሪ ነባርነት">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_nebarnet_number_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="number"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_national_id"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:hint="ቁጽሪ መንነት">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_national_id_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="number"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_date_of_birth"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ዕለተ ልደት"
                                app:startIconDrawable="@drawable/ic_baseline_edit_calendar_24">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_date_of_birth_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="date"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_place_of_birth"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ቦታ ትውልዲ ">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_place_of_birth_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_country_of_birth"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ሃገር ትውልዲ  ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_country_of_birth_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />


                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_place_of_origin"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="መበቆል ዓዲ ቦታ">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_place_of_origin_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_country_of_origin"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:hint="መበቆል ዓዲ ሃገር">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_country_of_origin_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_number_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/robotocondensedbold"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#F4F8FB"
                            android:textSize="96sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>