<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/form2_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_text_view_labor_force_participation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/geezable"
                        android:gravity="start"
                        android:text="ስም ስም ኣቦ"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="345dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="20dp"
                                    android:fontFamily="@font/geezable"
                                    android:text="ኣብ ውሽጢ 6 ወርሒ ካብ ስራሕካ ብግዝያውነት ኣብኲርካዶ ትፈልጥ"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginBottom="20dp"
                                    android:fontFamily="@font/geezable"
                                    android:gravity="start"
                                    android:text="ኣብ ውሽጢ 12 ወርሒ ትኽፈሎ ወይ ዘይትኽፈሎ ስራሕ ተሳቲፍካዶ ትፈልጥ"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/geezable"
                                    android:gravity="center|start"
                                    android:text="ኣብ ውሽጢ 6 ወርሒ ካብ ስራሕካ ብግዝያውነት ኣብኲርካዶ ትፈልጥ"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                                    android:id="@+id/beenAbsentLast6MonthsGroupChoice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    app:tbgCheckedButton="@+id/beenAbsentLast6MonthsGroupChoiceNo">
                                    <com.nex3z.togglebuttongroup.button.CircularToggle
                                        android:id="@+id/beenAbsentLast6MonthsGroupChoiceYes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="እወ" />
                                    <com.nex3z.togglebuttongroup.button.CircularToggle
                                        android:id="@+id/beenAbsentLast6MonthsGroupChoiceNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ኣይፋል" />
                                </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                                <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                                    android:id="@+id/participatedPaidOrUnpaidLast12MonthsGroupChoice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    app:tbgCheckedButton="@+id/participatedPaidOrUnpaidLast12MonthsGroupChoiceNo">
                                    <com.nex3z.togglebuttongroup.button.CircularToggle
                                        android:id="@+id/participatedPaidOrUnpaidLast12MonthsGroupChoiceYes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="እወ" />
                                    <com.nex3z.togglebuttongroup.button.CircularToggle
                                        android:id="@+id/participatedPaidOrUnpaidLast12MonthsGroupChoiceNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ኣይፋል" />
                                </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                                <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                                    android:id="@+id/beenAbsentLast12MonthsGroupChoice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    app:tbgCheckedButton="@+id/beenAbsentLast12MonthsGroupChoiceNo">
                                    <com.nex3z.togglebuttongroup.button.CircularToggle
                                        android:id="@+id/beenAbsentLast12MonthsGroupChoiceYes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="እወ" />
                                    <com.nex3z.togglebuttongroup.button.CircularToggle
                                        android:id="@+id/beenAbsentLast12MonthsGroupChoiceNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ኣይፋል" />
                                </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_work_responsibility"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="ሓላፍነታዊ ስራሕ ወይ ዕዮ ኣብ ቀንዲ ስራሕካ እንታዩ">
                                    <AutoCompleteTextView
                                            android:id="@+id/ed_work_responsibility_ed"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/geezable"
                                            android:inputType="none"
                                            android:textSize="12sp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_what_is_your_work_type"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="እንታይ ዓይነት እዩ ቀንዲ ስራሕካ">
                                        <AutoCompleteTextView
                                            android:id="@+id/ed_what_is_your_work_type_ed"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/geezable"
                                            android:inputType="none"
                                            android:textSize="12sp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_level_of_work"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                        android:layout_width="320dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="ደረጃ ስራሕካ">
                                        <AutoCompleteTextView
                                            android:id="@+id/ed_level_of_work_ed"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/geezable"
                                            android:inputType="none"
                                            android:textSize="12sp" />

                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/geezable"
                                android:gravity="center"
                                android:text="ሰራሕተኛ ኣብ ውሽጢ 6 ወርሒ ብጥረ ገንዘብ ዝተቐበሎ"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_cash_salary_gross"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="45dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ደሞዝ(ብዘይ ግብርን ተቖራጽን)">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_cash_salary_gross_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_cash_commission"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ኮምሽን ፥ ኣበል ፥ ተወሳኺ ደሞዝ">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_cash_commission_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_cash_over_time"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ትርፊ ግዜ">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_cash_over_time_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_cash_tips"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ሞቑሽሽ(ቲፕ) ብገንዘብ">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_cash_tips_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_cash_other_income"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ካልእ ኣታዊ(ብገንዘብ )">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_cash_other_income_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textVsdfgiew10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/geezable"
                                android:gravity="center"
                                android:text="ሰራሕተኛ ኣብ ውሽጢ 6 ወርሒ ብልግሲ ዝተቐበሎ እንተሎ"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_gift_discounted"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="45dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ብጎደሎ ዋጋ ዝገዛእካዮ ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_gift_discounted_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_price_of_food_or_food_as_your_salary"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="መግቢ / መግቢ ከም ደሞዝካ/ኪ ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_price_of_food_or_food_as_your_salary_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_price_from_free_rent"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ካብ ናጻ ገዛ ክራይ ትረኽቦ ብዋጋ ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_price_from_free_rent_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_clothes_as_aid"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ክዳውንቲ ከም ሓገዝ ዝረኸብካዮ ብዋጋ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_clothes_as_aid_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_other_incomes"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ካልእ ትረኽቦ ሓገዝ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_other_incomes_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="number"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/form2_card_number_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/robotocondensedbold"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#F4F8FB"
                        android:textSize="96sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>