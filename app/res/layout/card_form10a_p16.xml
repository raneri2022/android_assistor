<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/form2_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/delete_btn_p16"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.98"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.01999998"
                    app:tint="@color/red1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_type_of_non_agricultural_income"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"

                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ዓይነት ዘይሕርሻዊ ንጥፈት">

                                    <AutoCompleteTextView
                                        android:id="@+id/ed_type_of_non_agricultural_income_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="none"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_currency"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ባጤራ">


                                    <AutoCompleteTextView
                                        android:id="@+id/ed_currency_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="none"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_total_income"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ካብ መሸጣ ፍርያት ወይ ዝተዋህበ ኣገልግሎት ዝተረኽበ ጠቕላላ ኣታዊ ብናቕፋ (ዝሓለፈ ዓመት)">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_total_income_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_type_of_income"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"

                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ዓይነት ኣታዊ">


                                    <AutoCompleteTextView
                                        android:id="@+id/ed_type_of_income_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="none"
                                        android:textSize="12sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_within_6_months"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ኣብ ውሽጢ 6 ወርሒ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_within_6_months_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_within_12_months"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ኣብ ውሽጢ 12 ወርሒ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_within_12_months_ed"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:textSize="12sp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/geezable"
                                    android:gravity="center"
                                    android:text="ኣብ 2021 ካብ ጠቕላላ ኣታዊ ዋኒን/ ትካል ንመካየዲ ዋኒን/ ትካል ዝተገብረ ወጻኢታት ምስ ተነከዩ ዝተረኽበ መኽሰብ ብናቕፋ"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_before_tax_paid"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="320dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"

                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:background="@drawable/border"
                                        android:hint="ግብሪ ከይተኸፍሎ">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_before_tax_paid_ed"
                                            android:layout_width="320dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/geezable"
                                            android:textSize="12sp" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_tax_paid_income"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="320dp"
                                        android:layout_height="wrap_content"

                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="ግብሪ ዝተኸፍሎ ጽሩይ ኣታዊ">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_tax_paid_income_ed"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/geezable"
                                            android:textSize="12sp" />

                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/form2_card_number_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/robotocondensedbold"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#F4F8FB"
                            android:textSize="96sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>