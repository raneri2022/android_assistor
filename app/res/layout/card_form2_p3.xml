<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/form2_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/form2_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/geezable"
                        android:gravity="start"
                        android:text="ስም ስም ኣቦ"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_parental_status"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ኩነታት ወለዲ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_parental_status_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_marital_status"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ኩነታት መርዓ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_marital_status_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_first_marriage_age"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ፋልማይ ዕድመ መርዓ">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_first_marriage_age_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="number"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.sayantan.advancedspinner.MultiSpinner
                                android:id="@+id/multi_one"
                                android:layout_width="140dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                app:title="Languages" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_presence"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ህላወ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_presence_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_presence_place"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ቦታ ህላወ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_presence_place_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_presence_zone"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ዞባ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_presence_zone_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />


                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_presence_sub_zone"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:hint="ንኡስ ዞባ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_presence_sub_zone_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />



                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_phone_number"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ቁጽሪ ሞባይል">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_phone_number_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="number"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_land_line"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ቀዋሚ ተሌፎን">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_land_line_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="number"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_cdma"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="CDMA"
                                android:inputType="number">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_cdma_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="number"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_national_duty"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ሃገራዊ ኣገልግሎት">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_national_duty_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ed_national_duty_in_complete"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="45dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/border"
                                android:hint="ዝፈጸመ ወይ ዘይፈጸመ">

                                <AutoCompleteTextView
                                    android:id="@+id/ed_national_duty_in_complete_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geezable"
                                    android:inputType="none"
                                    android:textSize="12sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/form2_card_number_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/robotocondensedbold"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#F4F8FB"
                        android:textSize="96sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>