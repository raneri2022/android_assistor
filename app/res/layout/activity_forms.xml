<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5FF"
    tools:context=".FormsP1Data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoblack"
                android:gravity="clip_vertical|center_vertical|fill_vertical"
                android:text="Eritrean Socio Demographic Data Census Co-Pilot Project"
                android:textColor="#2F9DF6"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="15dp"
                app:srcCompat="@drawable/basic_details_header" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="800dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_zone"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dp"

                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ዞባ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_zone_ed"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_sub_zone"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ንኡስ ዞባ">

                                    <com.google.android.material.textfield.TextInputEditText

                                        android:id="@+id/ed_sub_zone_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_town"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ከተማ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_town_ed"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_kebabi"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dp"

                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ከባቢ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_kebabi_ed"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_village"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ዓዲ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_village_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_enumeration_number"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ቁጽሪ መለለይ ቦታ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_enumeration_number_ed"

                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_type_of_resident_edit_text"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="700dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"

                                    android:hint="ዓይነት መንበሪ">

                                    <AutoCompleteTextView
                                        android:id="@+id/ed_type_of_resident_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable"
                                        android:inputType="none" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="800dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_zipcode"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="45dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ዚፕ ኮድ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_zipcode_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_street"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ጎደና">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_street_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_number_of_family_members"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ብዝሒ ስድራቤት">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_number_of_family_members_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_house_number"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:hint="ቁጽሪ ገዛ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_house_number_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ed_family_number_kupon"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:maxLength="12"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginBottom="15dp"
                                    android:hint="ቁጽሪ መለለይ ስድራ">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ed_family_number_kupon_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxLength="12"
                                        android:fontFamily="@font/geezable" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_type_house_number"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"

                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:background="@drawable/border"
                                        android:hint="ቁጽሪ ቅርጺ ህንጻ ">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_type_house_number_ed"
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:fontFamily="@font/geezable" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_house_unit_number"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"

                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="ቁጽሪ ኣሃዱ መንበሪ">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_house_unit_number_ed"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:fontFamily="@font/geezable" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/ed_family_number"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"

                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:hint="ቁጽሪ ስድራቤት">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_family_number_ed"
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:fontFamily="@font/geezable" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom|end"
            android:background="@color/white"
            android:gravity="center">

            <Button
                android:id="@+id/prev_btn_form0"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="55dp"
                android:fontFamily="@font/robotoblack"
                android:text="Previous" />

            <Button
                android:id="@+id/next_btn_form0"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="55dp"
                android:fontFamily="@font/robotoblack"
                android:text="Next" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>